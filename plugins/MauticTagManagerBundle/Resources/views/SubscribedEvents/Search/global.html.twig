{% if showMore is defined %}
  <a href="{{ url('mautic_tagmanager_index', {'search': searchString}) }}" data-toggle="ajax">
    <span>{{ 'mautic.core.search.more'|trans({'%count%': remaining}) }}</span>
  </a>
{% else %}
  {% if canEdit %}
    <a href="{{ url('mautic_tagmanager_action', {'objectAction': 'edit', 'objectId': item.id}) }}" data-toggle="ajax">
      <span class="fw-sb">{{ item.tag }}</span>
      <span class="ml-4 mr-sm">#{{ item.getId() }}</span>
    </a>
  {% else %}
    <span class="fw-sb">{{ item.tag }}</span>
  {% endif %}
  <div class="clearfix"></div>
{% endif %}
